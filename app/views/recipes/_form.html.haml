= simple_form_for @recipe, html: { multipart: true } do |f|

	.panel-body
		.form-group
			= f.input :title, error: "Please give a title to the recipe", input_html: { class: 'form-control' }
		.form-group
			= f.input :description, error: "Please give a description to the recipe", input_html: { class: 'form-control' }
		.form-group
			= f.input :image, error: "Please give an image to the recipe", input_html: { class: 'form-control' }

		%br

		.row
			.col-md-6
				%h3 Ingredients
				#ingredients
					.description
						= f.simple_fields_for :ingredients do |ingredient|
							= render 'ingredient_fields', f: ingredient
						.links
							= link_to_add_association 'Add Ingredient', f, :ingredients, class: "btn btn-default add-button btn-success"

			.col-md-6
				%h3 Instructions
				#directions
					.description
						= f.simple_fields_for :directions do |direction|
							= render 'direction_fields', f: direction
						.links
							= link_to_add_association 'Add Step', f, :directions, class: "btn btn-default add-button btn-success"
		= link_to "Back", root_path, class: "btn btn-default"
		= f.button :submit, class: "btn btn-primary pull-right"
