<%= div_for(comment) do %>
  <div class="comments clearfix">
    <div class="pull-left">
      <p class="lead"><%=comment.body.capitalize %></p>
      <p><small>Submitted <strong><%= time_ago_in_words(comment.created_at) %> ago</strong> by <%= comment.user.email %></small></p>
    </div>

    <div class="btn-group pull-right">
      <% if user_signed_in? && (comment.user == current_user || current_user.admin?)  -%>
        <%= link_to 'Remove', comment, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-custom" %>
      <% end %>
    </div>
  </div>
<% end %>