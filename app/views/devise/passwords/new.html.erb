<div class= "main_content">
	<div class="col-md-8 col-md-offset-2">
	  <div class="row">
	    <div class="panel panel-default">
	      <div class="panel-heading">
	        <h2>
	        <center>Forgot your password?<center>
	        </h2>
	      </div>
		  <div class="panel-body">
			<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

			  <div class="form-group">
			  	<h4>
			    	<%= f.input :email, label: "Account email", error: "Please specify an email address", required: true, autofocus: true, input_html: { class: 'form-control' } %>
			    </h4>
			  </div>

			  <br>
			  <br>

			 <div class="button">
			    <%= link_to "Back", new_user_session_path, class: "btn btn-custom pull-left" %>
			  </div>

			  <div class="actions">
			    <%= f.button :submit, "Send reset password instructions", class: "btn btn-custom pull-right" %>
			  </div>

			<% end %>
			
		  </div>
	  	</div>
	  </div>
	</div>>
</div>