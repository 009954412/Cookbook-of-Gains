<div class="col-md-8 col-md-offset-2">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2>
        <center>Forgot your password?<center>
        </h2>
      </div>
	  <div class="panel-body">
		<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

		  <div class="form-group">
		    <%= f.input :email, label: "Account email", error: "Please specify an email address", required: true, autofocus: true, input_html: { class: 'form-control' } %>
		  </div>

		  <div class="submit">
		    <%= f.button :submit, "Send reset password instructions", class: "btn btn-primary pull-right" %>
		  </div>

		<% end %>
		
	  	<%= link_to "Back", new_user_session_path, class: "btn btn-default" %>

	  </div>
  	</div>
  </div>
</div>>
